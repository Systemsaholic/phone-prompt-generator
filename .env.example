# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL="file:./data/prompts.db"

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3040

# Audio Storage Path
AUDIO_STORAGE_PATH=./public/audio

# Authentication Configuration
# IMPORTANT: Change these values before deploying to production!
AUTH_USERNAME=admin

# For AUTH_PASSWORD, you can use either:
# 1. Plain text (NOT recommended for production): AUTH_PASSWORD=mypassword
# 2. Bcrypt hash (recommended): Use the hashPassword utility function
#    Example: Run `node -e "require('./lib/auth').hashPassword('yourpassword').then(console.log)"`
AUTH_PASSWORD=admin123

# SESSION_SECRET: REQUIRED - Must be a long, random string (min 32 characters)
# Generate with: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# NEVER use the default value in production!
SESSION_SECRET=your-secret-key-change-this-to-something-random-and-secure

# CLEANUP_SECRET_KEY: Secret key for session cleanup endpoint
# Generate with: openssl rand -base64 32
# Used to authenticate requests to /api/sessions/cleanup
CLEANUP_SECRET_KEY=your-cleanup-secret-key-change-this