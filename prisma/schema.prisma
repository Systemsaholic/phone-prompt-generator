generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Generation {
  id           String   @id @default(cuid())
  text         String
  mode         String   // 'basic' or 'advanced'
  voice        String
  speed        Float?
  instructions String?  // For advanced mode
  format       String
  fileName     String
  fileUrl      String
  templateUsed String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Template {
  id         String   @id @default(cuid())
  name       String
  category   String
  content    String
  variables  String   // JSON string array of variable names
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}